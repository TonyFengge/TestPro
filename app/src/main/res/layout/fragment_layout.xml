<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.byids.hy.testpro.View.MyCustomScrollView
        android:id="@+id/id_scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_menu"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_set"
                    android:clickable="true"
                    android:text="设置"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_monitoring"
                    android:clickable="true"
                    android:text="监控"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_lock"
                    android:clickable="true"
                    android:text="门锁"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_security"
                    android:clickable="true"
                    android:text="布防"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/id_iv"
                android:layout_below="@id/linear_menu"
                android:src="@mipmap/back2"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.byids.hy.testpro.View.MyPullUpScrollView
                android:id="@+id/scroll_pull_up"
                android:layout_below="@id/linear_menu"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="111111"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="380dp" />
                    <TextView
                        android:text="111111"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="380dp" />
                    <TextView
                        android:text="111111"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="400dp" />
                    <TextView
                        android:text="111111"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="400dp" />
                    <TextView
                        android:text="111111"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="400dp" />
                </LinearLayout>
            </com.byids.hy.testpro.View.MyPullUpScrollView>

        </RelativeLayout>
    </com.byids.hy.testpro.View.MyCustomScrollView>
    <Button
        android:id="@+id/button"
        android:focusable="true"
        android:clickable="true"
        android:text="下拉菜单"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>